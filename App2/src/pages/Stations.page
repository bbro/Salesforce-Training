<apex:page showHeader="false" sidebar="false" controller="CityStationPlatformCtrl">
	<apex:form >
	<apex:messages />
		<apex:pageBlock title="LIST OF STATIONS">
			<apex:pageBlockTable value="{! allStations }" var="st">
				<apex:column value="{! st.Name }" />
				<apex:column value="{! st.City__c }" />
				<apex:column value="{! st.Is_Main_Station__c }" />
				<apex:column >
					<apex:commandLink action="{! gotoEditStation }" value="Edit">
						<apex:param name="stationId" value="{! st.Id }" assignTo="{! station.Id }" />
					</apex:commandLink>
				</apex:column>
			</apex:pageBlockTable>
			<br/><p align="center"><apex:commandButton value="Back" action="{! backToAdministratorOptions }"/>
			<apex:commandButton value="Add Station" action="/apex/Add_Station" /></p>
		</apex:pageBlock>
	</apex:form>
</apex:page>